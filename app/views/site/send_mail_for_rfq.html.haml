#mailer_wrap
  %img.small_mailer_icon{"src"=>"/images/small_dark_icon.png", "height"=>"50"}
  %h1 Submit a Request for Quote!
  
  %form{"name"=>"smhkform", "id"=>"smhkform", "action"=>"/send_mail_to_friend", "method"=>"POST"}
    %table
      %tr
        %td{"valign"=>"top"}
          %label.text_label Your Name (Required)
        %td{"valign"=>"top"}
          %input{"type"=>"text", "name"=>"name", "class"=>"required"}
          .div_spacer
      %tr
        %td{"valign"=>"top"}
          %label.text_label Your Email (Required)
        %td{"valign"=>"top"}
          %input{"type"=>"text", "name"=>"contact", "class"=>"required email"}
          .div_spacer
      %tr
        %td{"valign"=>"top"}
          %label.text_label Describe your Project
        %td{"valign"=>"top"}
          %textarea{"type"=>"text", "name"=>"message_body", "class"=>"required"}
          .div_spacer
    %input{"class"=>"submit", "value"=>"Send", "type"=>"submit", "onClick" =>"$(\"#kenderson\").validate();" }
