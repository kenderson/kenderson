!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= "ModWedding Common Theme Template - Rev 1"
    = stylesheet_link_tag("facebox.css","jquery.fancybox-1.3.1.css","btn.css","modwedding.css",:media => 'screen, projection')
    %link{:href=>"http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css",:rel=>"stylesheet",:type=>"text/css"}
    %link{:href=>"javascripts/colorpicker/css/colorpicker.css",:rel=>"stylesheet",:type=>"text/css"}
    = javascript_include_tag('jquery-1.4.2.js','fancybox/jquery.fancybox-1.3.1.js','fancybox/jquery.mousewheel-3.0.2.pack.js','application.js','facebox.js','jquery.bgiframe.min.js', 'jquery.livequery.min.js', 'jquery.validate.js','jquery.quicksand.js','jquery.easing.1.3.js','jquery.qtip-1.0.0-rc3.d.min.js')
    %script{:src=>"http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"}
    %script{:src=>"javascripts/colorpicker/js/colorpicker.js", :type=>"text/javascript"}

%body
  #background_gradient{:style=>"border:1px solid red;"}
    / - if editing_page?
    /   #page-editor-bar
    /     You are creating a new page. This is a preview of how your page will look. This page is NOT saved.
    /     %input{"type"=>"button","value"=>"Preview","onclick"=>"previewPage($(\"#edit_page\"));"}
    /     %input{"type"=>"button","value"=>"Save This Page","onclick"=>">$(\"#edit_page\").submit();"}
    /     %input{"type"=>"button","value"=>"Cancel","onclick"=>"window.location=\"/admin/site/organize\";"}
    / - elsif @preview
    /   #page-editor-bar
    /     This is a preview of your page. You must click save on the original page to save these changes.
    #page_wrap{:style=>"border:1px solid red;"}
      / - flashes 
      #frame{:style=>"border:1px solid red;"}
        %table{:cellspacing=>"0", :cellpadding=>"0", :border=>"0"}
          %tr
            %td.valign_top#header_image{:colspan=>"2"}
              #top_creds.clearfix{:style=>"border:1px solid red;"}
                #top_creds_left
                #top_creds_right
                  User Creds and Login Div
                  / - if current_user
                  /   .user_welcome
                  /     = headshot(current_user, :small)
                  /     = t 'user.welcome_back', :user => current_user
                  /   %button.submitBtn{:href => account_dashboard_url(@my_account)}
                  /     %span My Account
                  /   %button.submitBtn{:href => logout_path}
                  /     %span Log out
                  / - else
                  /   %button.submitBtn{:href => '/login'}
                  /     %span Login
              #header.clearfix{:style=>"border:1px solid red;"}
                #header_top.clearfix{:style=>"border:1px solid red;"}
                  #header_initials
                    %span
                      B
                      / = @account.bride.initial
                    %span.home_and &amp;         
                    %span
                      G
                      / = @account.groom.initial
                  #header_names
                    %span
                      Bride
                      / = @account.bride.name
                    %span.home_and &amp;
                    %span
                      Groom
                      / = @account.groom.name
                #header_location{:style=>"border:1px solid red;"}
                  #location_ornament_left{:style=>"border:1px solid red;"}
                  #header_location_info{:style=>"border:1px solid red;"}
                    %span.muted
                      Wedding Date
                      / = @account.wedding.pretty_date
                    %span.a_color{:style=>"padding:0px 5px;"} *
                    %span.muted
                      Wedding Location
                      / = @account.wedding.location
                  #location_ornament_right{:style=>"border:1px solid red;"}
          %tr
            %td
              #inner_mid_bg_shadow{:style=>"border:1px solid red;"}
                #inner_mid_bg_wrap{:style=>"border:1px solid red;"}
                  #inner_mid_bg_top{:style=>"border:1px solid red;"}
                    #inner_mid_bg_btm{:style=>"border:1px solid red;"}
                      %table.content_body{:cellspacing=>"0", :cellpadding=>"0", :border=>"0"}
                        %tr
                          %td.valign_top{:width=>"195px"}
                            #menu_wrap{:style=>"border:1px solid red;"}
                              #menu_head{:style=>"border:1px solid red;"}
                              #menu{:style=>"border:1px solid red;"}
                                %ul
                                  %li Menu Item 1
                                  %li Menu Item 2
                                  / %li.home
                                  /   = link_to @account.site.front_page.name, account_site_page_path(@account, @account.site.front_page)
                                  / .menu_seperator
                                  / - @account.site.pages.navigational.each do |page|
                                  /   - page_current = page_current?(page)
                                  /   - if page.subpages.blank?
                                  /     %li
                                  /       = link_to(page.name, account_site_page_path(@account, page), :class  => page_current ? 'active' : '')
                                  /     .menu_seperator
                                  /   - if !page.subpages.blank?
                                  /     %li
                                  /       = link_to(page.name, account_site_page_path(@account, page), :class  => page_current ? 'active_head' : '')
                                  /     .menu_seperator
                                  /     - if page_current && !page.subpages.blank?
                                  /       - page.subpages.published.each do |page|
                                  /         - subpage_current = page_current?(page)
                                  /         %li
                                  /           = link_to("#{page.name}", account_site_page_path(@account, page), :class  => subpage_current ? 'active sub' : 'sub')
                                  /         .menu_seperator
                              #menu_foot{:style=>"border:1px solid red;"}
                          %td.valign_top{:width=>"715px",:rowspan=>"2"}
                            #content_wrap{:style=>"border:1px solid red;"}
                              #content
                                = yield
                        %tr
                          %td.valign_bottom
                            #menu_tail_wrap{:style=>"border:1px solid red;"}
                              #menu_tail
                                #menu_tail_info{:style=>"border:1px solid red;"}
                                  Number of Days
                                  / - if @account.wedding.days_til >= 0
                                  /   %span= @account.wedding.days_til
                                  / - else
                                  /   %span= @account.wedding.days_til.abs
                                #menu_tail_info_days{:style=>"border:1px solid red;"}
                                  Tail Saying
                                  / - day_or_days = (@account.wedding.days_til.abs == 1) ? 'Day' : 'Days'
                                  / - if @account.wedding.days_til >= 0
                                  /   %span="#{day_or_days} until the wedding"
                                  / - else
                                  /   %span="#{day_or_days} since wedding!"
          %tr
            %td.valign_top{:colspan=>"2"}
              #footer_image{:style=>"border:1px solid red;"}
                #tail_menu{:style=>"border:1px solid red;"}
                  #tail_menu_title{:style=>"border:1px solid red;"}
                    %span
                      Bride Name
                      / = @account.bride_name
                    %span.accent &amp;  
                    %span
                      Groom Name
                      / = @account.groom_name
                    %span's Wedding Website
                  #tail_menu_wrap
                    %ul
                      %li Menu Item 1
                      %li Menu Item 2
                #copyright
                  %a{:href=>"http://www.modwedding.com"}
                    %span ModWedding