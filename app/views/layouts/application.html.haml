!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8", :name=>"keywords", :content=>"lawyer,attorney,law firm,legal,law office,legal services,fairfax,fredericksburg,virgina,criminal law"}
    %title= "Kenderson Consulting"
    %link{"rel"=>"shortcut icon", "href"=>"/images/favicon.ico"}
    = javascript_include_tag('jquery-1.3.1.js', 'jquery-ui-personalized-1.6rc6.js', 'facebox.js', 'jquery.bgiframe.min.js', 'jquery.livequery.min.js', 'application.js', 'jquery.validate.js', 'btn.js', 'jquery.cycle.all.min.js', 'jquery.cycle.trans.min.js', 'jquery.easing.1.3.js')
    = stylesheet_link_tag("ui.all.css","facebox.css","btn.css","application.css",:media => 'screen, projection')
    /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
%body
  #page_frame
    - if flash[:notice]
      .flash_notice
        %a{"href"=>"#", "id"=>"close_notification", "onclick"=>"$(this).parent().remove();"}
          %span Close
        .flash_notice_text
          = h(flash[:notice])
    .page_wrap
      .top_header
      .content_wrap.clearfix
        = yield
      .page_footer_wrap
        .page_footer
          .contact_me
            %a{"href"=>"/send_mail_to_partners", "class"=>"facebox"}
              %span Contact Me 
          .small_logo
            %img{"src"=>"/images/logo_small_a.png"}
            
      .tail
      .copy_right
        %p 
          %a{"href"=>"mailto:ken@kenderson.net"} Kenderson Consulting
          &copy; 
          = DateTime.now.year
        
%script{"type"=>"text/javascript"}
  var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www."); document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

%script{"type"=>"text/javascript"}
  try {var pageTracker = _gat._getTracker("UA-10020250-1"); pageTracker._trackPageview();} catch(err) {}