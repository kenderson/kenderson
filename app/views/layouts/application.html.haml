!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8", :name=>"keywords", :content=>"web design, css,design,html,front end,virginia,fairfax,richmond,washington dc,maryland"}
    %meta{:name=>"google-site-verification", :content=>"Q9IgUhV24gYaOLqFzT5Mxp8_1F-j8obg9Ru2dmvqfAQ"}
    %title= "Kenderson Consulting"
    %link{"rel"=>"shortcut icon", "href"=>"/images/favicon.ico"}
    = stylesheet_link_tag("facebox.css","jquery.fancybox-1.3.1.css","btn.css","application.css",:media => 'screen, projection')
    %link{:href=>"http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css",:rel=>"stylesheet",:type=>"text/css"}
    %link{:href=>"javascripts/colorpicker/css/colorpicker.css",:rel=>"stylesheet",:type=>"text/css"}

    = javascript_include_tag('jquery-1.4.2.js','fancybox/jquery.fancybox-1.3.1.js','fancybox/jquery.mousewheel-3.0.2.pack.js','application.js','facebox.js','jquery.bgiframe.min.js', 'jquery.livequery.min.js', 'jquery.validate.js','jquery.quicksand.js','jquery.easing.1.3.js','jquery.qtip-1.0.0-rc3.d.min.js')
    %script{:src=>"http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"}
    %script{:src=>"javascripts/colorpicker/js/colorpicker.js", :type=>"text/javascript"}
    
    /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
%body
  - if flash[:notice]
    .flash_notice
      .flash_notice_wrap
        %a{"href"=>"#", "id"=>"close_notification", "onclick"=>"$(this).parent().remove();"}
          %span Close
        .flash_notice_text
          = h(flash[:notice])
  #page_frame
    .page_wrap
      .top_header
        %span Kenderson Consulting: HTML, CSS and JavaScript Consulting
      .navigation.clearfix
        %ul.clearfix
          %li 
            %a{"href"=>"/"} Home
          %li
            %a{"href"=>"/process", :class=>((params['action'] == "process") ? "current" : "")} Process
          %li
            %a{"href"=>"/portfolio", :class=>((params['action'] == "portfolio") ? "current" : "")} Portfolio
          %li
            %a{"href"=>"/lab", :class=>((params['action'] == "lab") ? "current" : "")} Lab
          %li
            %a{"href"=>"/connect", :class=>((params['action'] == "connect") ? "current" : "")} Connect
          %li
            %a{"href"=>"http://blog.kenderson.net"} Blog      
      .content_wrap.clearfix      
        = yield
      .page_footer_wrap
        .page_footer
          .contact_me
            %a{"href"=>"/send_mail_to_partners", :rel=>"fancybox"}
              %span Contact Me             
      .tail
      .copy_right
        %p 
          %a{"href"=>"mailto:ken@kenderson.net"} Kenderson Consulting
          &copy; 
          = DateTime.now.year
        
%script{"type"=>"text/javascript"}
  var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www."); document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

%script{"type"=>"text/javascript"}
  try {var pageTracker = _gat._getTracker("UA-10684679-1"); pageTracker._trackPageview();} catch(err) {}